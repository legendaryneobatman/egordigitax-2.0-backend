{
  "name": "my-turborepo",
  "version": "0.0.0",
  "private": true,
  "description": "",
  "author": "",
  "license": "UNLICENSED",
  "scripts": {
    "dev": "turbo run dev",
    "dev:gateway": "turbo run dev --filter=api-gateway --filter='@repo/*'",
    "dev:gateway:catalogue": "turbo run dev --filter=api-gateway --filter=catalogue --filter='@repo/*'",
    "build:packages": "turbo run build --filter='@repo/*'",
    "build:apps": "turbo run build --filter='./apps/*'",
    "build": "npm run build:packages && npm run build:apps",
    "test": "turbo run test",
    "test:e2e": "turbo run test:e2e",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "generate-db": "./cli/generate-prisma-clients.sh"
  },
  "devDependencies": {
    "@repo/eslint-config": "*",
    "@repo/typescript-config": "*",
    "@types/node": "^22.15.17",
    "prettier": "^3.2.5",
    "ts-node": "^10.9.2",
    "turbo": "^2.5.2",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "npm@9.6.7",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "@faker-js/faker": "^9.7.0",
    "dotenv-cli": "^8.0.0"
  }
}
